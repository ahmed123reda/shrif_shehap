<%- include("../layouts/head") %> 

    <%- include("../layouts/main-header") %> 
    <%- include("../layouts/main-sidebar") %> 

<div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <h3 class="content-header-title"> اللغات </h3>
                    <div class="row breadcrumbs-top">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="">الرئيسية</a>
                                </li>
                                <li class="breadcrumb-item active"> اللغات
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- DOM - jQuery events table -->
                <section id="dom">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">جميع لغات الموقع </h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <%- include("../layouts/notification") %> 

                                <div class="card-content collapse show">
                                    <div class="card-body card-dashboard">
                                        <table
                                            class="table display nowrap table-striped table-bordered scroll-horizontal " style="width:100%">
                                            <thead>
                                            <tr>
                                                <th> الاسم</th>
                                                <th>الاختصار</th>
                                                <th>اتجاه</th>
                                                <th>الحالة</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                <% allLanguage.forEach(element => { %>
                                                 <tr>
                                                        <td><%= element.language %></td>
                                                        <td><%= element.shourtcut %></td>
                                                        <td><%= element.direction %></td>
                                                        <td><%= element.active ? "active" : "not active" %></td>
                                                     
                                                        <td>
                                                            <div role="group"
                                                                 aria-label="Basic example">
                                                                <a href="editLanguage/<%= element.id %>" class="btn btn-outline-dark btn-min-width box-shadow-3 mr-1 mb-1">Edit</a>
                                                                <form action="deleteLanguage/<%= element.id %>" method="post" class=" d-inline">
                                                                    <input type="hidden" name="language" value="<%= element.language %>">
                                                                    <input type="hidden" name="shourtcut" value="<%= element.shourtcut %>">
                                                                    <input type="hidden" name="image" value="<%= element.country_img %>">
                                                                    <button class="btn btn-outline-danger btn-min-width box-shadow-3 mr-1 mb-1">Delete</button>
                                                                </form>
                                                                <a href="activeLanguage/<%= element.id %>" class="btn btn-outline-primary btn-min-width box-shadow-3 mr-1 mb-1">Active</a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                        <div class="justify-content-center d-flex">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


    <%- include("../layouts/footer") %> 
    <%- include("../layouts/footer-scripts") %> 
</body>
</html>


