<%- include("../layouts/head") %> 



    <%- include("../layouts/main-header") %> 
    <%- include("../layouts/main-sidebar") %> 

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin/dashpored">الرئيسية </a>
                                </li>
                                <li class="breadcrumb-item"><a href="/admin/supCatigory/"> الاقسام الفرعيه</a>
                                </li>
                                <li class="breadcrumb-item active">إضافة قسم فرعي
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- Basic form layout section start -->
                <section id="basic-form-layouts">
                    <div class="row match-height">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title" id="basic-layout-form"> إضافة قسم فرعي </h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <%- include("../layouts/notification") %> 
                                <div class="card-content collapse show">
                                    <div class="card-body">
                                        <form class="form" method="post" enctype="multipart/form-data">
                                            <% activeLanuage.forEach((element , i) => { %>
                                                <div class="form-body">
                                                    <h4 class="form-section"><i class="ft-home"></i> بيانات القسم الفرعي <%= element.language %></h4>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="projectinput1"> اسم القسم </label>
                                                                <input type="text" class="form-control" placeholder="ادخل اسم القسم" name="catigors[<%=i%>][name]">
                                                                <% if (validationError) { %>
                                                                    <% if (validationError["catigors[" + i + "].name"]) { %>
                                                                        <span class="text-danger"><%=validationError["catigors[" + i + "].name"][0].msg %></span>
                                                                    <% } %>
                                                                <% } %>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="projectinput1"> وصف القسم </label>
                                                                <input type="text" class="form-control" placeholder="ادخل وصف القسم" name="catigors[<%=i%>][description]">
                                                                <% if (validationError) { %>
                                                                    <% if (validationError["catigors[" + i + "].description"]) { %>
                                                                        <span class="text-danger"><%=validationError["catigors[" + i + "].description"][0].msg %></span>
                                                                    <% } %>
                                                                <% } %>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-group mt-1">
                                                                <input type="checkbox" name="catigors[<%=i%>][active]"
                                                                    id="switcheryColor4"
                                                                    value="1"
                                                                    class="switch"
                                                                    checked
                                                                    />
                                                                <label for="switcheryColor4"
                                                                    class="card-title ml-1">الحالة </label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-group mt-1">
                                                                <input type="checkbox" name="catigors[<%=i%>][comments]"
                                                                    id="switcheryColor4"
                                                                    value="1"
                                                                    class="switch"
                                                                    checked
                                                                    />
                                                                <label for="switcheryColor4"
                                                                    class="card-title ml-1">تفعيل الكومنتات </label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-group mt-1">
                                                                <input type="checkbox" name="catigors[<%=i%>][interAction]"
                                                                    id="switcheryColor4"
                                                                    value="1"
                                                                    class="switch"
                                                                    checked
                                                                    />
                                                                <label for="switcheryColor4"
                                                                    class="card-title ml-1">تفعيل الليكات </label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-group mt-1">
                                                                <input type="checkbox" name="catigors[<%=i%>][forShow]"
                                                                    id="switcheryColor4"
                                                                    value="1"
                                                                    class="switch"
                                                                    checked
                                                                    />
                                                                <label for="switcheryColor4"
                                                                    class="card-title ml-1">هل القسم للعرض فقط </label>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <input type="hidden" name="catigors[<%=i%>][shourtcut]" value="<%= element.shourtcut %>">
                                            <% }) %>
                                            <div class="allCatigorySelect" >
                                                <div>
                                                    <div class="form-group">
                                                        <label for="projectinput1">القسم الرءيسي</label>
                                                        <select onChange="getCatigory(event)" data_count="0" name="mainCatigory[]" class="language form-control">
                                                            <option></option>
                                                            <% catigorys.forEach(element => { %>
                                                                <option value="<%= element.id %>"><%= element.name %></option>
                                                            <% }) %>
                                                        </select>
                                                        <% if (validationError) { %>
                                                            <% if (validationError["mainCatigory"]) { %>
                                                                <span class="text-danger"><%=validationError["mainCatigory"][0].msg %></span>
                                                            <% } %>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="projectinput2"> صور القسم </label>
                                                <div class="custom-file">
                                                    <input type="file" multiple name="image" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose image</label>
                                                </div>
                                                <% if (validationError) { %>
                                                    <% if (validationError.image) { %>
                                                        <span class="text-danger"><%=validationError.image[0].msg %></span>
                                                    <% } %>
                                                <% } %>
                                            </div>

                                            <div class="form-group">
                                                <label for="projectinput2"> صوره الشعار </label>
                                                <div class="custom-file">
                                                    <input type="file" name="slug" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose slug</label>
                                                </div>
                                                <% if (validationError) { %>
                                                    <% if (validationError.slug) { %>
                                                        <span class="text-danger"><%=validationError.slug[0].msg %></span>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                            <button type="button" class="btn btn-warning mr-1"
                                                onclick="history.back();">
                                                <i class="ft-x"></i> تراجع
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="la la-check-square-o"></i> حفظ
                                            </button>
                                    </form>
                                    <div class="d-none copySelect">
                                        <div class="form-group">
                                            <label for="projectinput1">القسم الرءيسي</label>
                                            <select onChange="getCatigory(event)" name="mainCatigory[]" class="language form-control">
                                                <option value=""></option>
                                            </select>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- // Basic form layout section end -->
            </div>
        </div>
    </div>

    <%- include("../layouts/footer") %> 
    <%- include("../layouts/footer-scripts") %> 

<script>
var counter = 0;
var allCatigorySelect = document.querySelector(".allCatigorySelect")
var copySelect = document.querySelector(".copySelect")
    function copyElement(data) {
        var child = copySelect.cloneNode(true);
        child.classList.remove("d-none")
        counter++
        child.querySelector("select").setAttribute("data_count" , counter)
        child.querySelector("select").setAttribute("name" , `mainCatigory[]`)
        data.catigorys.forEach(ele => {
            child.querySelector("select").innerHTML += `<option value="${ele.id}">${ele.name}</option>`
        })
        allCatigorySelect.appendChild(child)
    }

    function removeElement(dataCount) {
        var elements = document.querySelectorAll(".allCatigorySelect .copySelect")
        elements.forEach(ele => {
            if(ele.querySelector("select").getAttribute("data_count") > dataCount) {
                ele.remove()
            }
        })   
        counter = dataCount  
    }

    function getCatigory(e , eleId = 0) {
        var id = e.target.value ? e.target.value : 0;
        var dataCount = e.target.getAttribute("data_count")
        if(id) {
            $.ajax({
            type : "post",
            url  : "getMainCatigoryAjax/" + id + "/" + eleId,
            success(data) {
                if(data.catigorys.length > 0) {
                    if(counter == dataCount) {
                        copyElement(data)
                    } else if(counter > dataCount) {
                        var elements = document.querySelectorAll(".allCatigorySelect .copySelect")
                        elements.forEach(ele => {
                            if(ele.querySelector("select").getAttribute("data_count") > dataCount) {
                                ele.remove()
                            }
                        })
                        counter = dataCount
                        copyElement(data , allCatigorySelect , copySelect)
                    }
                } else {
                    removeElement(dataCount)
                }
            },
            error() {
                console.log("error")
            }
            })
        } else {
            removeElement(dataCount)
        }
    }

</script>


</body>
</html>
