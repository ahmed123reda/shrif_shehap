<%- include("../layouts/head") %> 



    <%- include("../layouts/main-header") %> 
    <%- include("../layouts/main-sidebar") %> 

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin/dashpored">الرئيسية </a>
                                </li>
                                <li class="breadcrumb-item"><a href="/admin/vendors/"> التجار </a>
                                </li>
                                <li class="breadcrumb-item active">إضافة تاجر
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- Basic form layout section start -->
                <section id="basic-form-layouts">
                    <div class="row match-height">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title" id="basic-layout-form"> إضافة تاجر </h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <%- include("../layouts/notification") %> 
                                <div class="card-content collapse show">
                                    <div class="card-body">
                                        <form enctype="multipart/form-data" class="form" method="post" >
                                            <div class="form-body">
                                                <h4 class="form-section"><i class="ft-home"></i> بيانات التاجر </h4>

                                                <div class="row">
                                                    
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> الاسم الاول </label>
                                                            <input type="text" class="form-control" placeholder="ادخل اسم الاول" name="fName">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.fName) { %>
                                                                    <span class="text-danger"><%=validationError.fName[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> الاسم الاخير</label>
                                                            <input type="text" class="form-control" placeholder="ادخل الاسم الاخير" name="lName">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.lName) { %>
                                                                    <span class="text-danger"><%=validationError.lName[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> العمر </label>
                                                            <input type="number" class="form-control" placeholder="ادخل العمر" name="age">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.age) { %>
                                                                    <span class="text-danger"><%=validationError.age[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> الايميل </label>
                                                            <input type="text" class="form-control" placeholder="ادخل الايميل الخاص بك" name="email">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.email) { %>
                                                                    <span class="text-danger"><%=validationError.email[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> الرقم السري </label>
                                                            <input type="password" class="form-control" placeholder="ادخل الرقم السري" name="password">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.password) { %>
                                                                    <span class="text-danger"><%=validationError.password[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> الرقم السري مره اخري </label>
                                                            <input type="password" class="form-control" placeholder="ادخل الرقم مره اخري" name="confirmPassword">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.confirmPassword) { %>
                                                                    <span class="text-danger"><%=validationError.confirmPassword[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> العنوان </label>
                                                            <input type="text" class="form-control" placeholder="ادخل العنوان" name="addres">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.addres) { %>
                                                                    <span class="text-danger"><%=validationError.addres[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> الموبايل </label>
                                                            <input type="number" class="form-control" placeholder="ادخل الموبايل الخاص بك" name="mobile">
                                                            <% if (validationError) { %>
                                                                <% if (validationError.mobile) { %>
                                                                    <span class="text-danger"><%=validationError.mobile[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        </div>
                                                    </div>

    


                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="projectinput2"> صوره الدوله </label>
                                                        <div class="custom-file">
                                                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                                                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                        </div>
                                                        <% if (validationError) { %>
                                                            <% if (validationError.image) { %>
                                                                <span class="text-danger"><%=validationError.image[0].msg %></span>
                                                            <% } %>
                                                        <% } %>
                                                    </div>
                                                </div>


                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="projectinput2">السجل التجاري</label>
                                                        <div class="custom-file">
                                                            <input type="file" name="CommercialRegister" class="custom-file-input" id="inputGroupFile01">
                                                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                        </div>
                                                        <% if (validationError) { %>
                                                            <% if (validationError.CommercialRegister) { %>
                                                                <span class="text-danger"><%=validationError.CommercialRegister[0].msg %></span>
                                                            <% } %>
                                                        <% } %>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group mt-1">
                                                        <input type="checkbox" name="active"
                                                            id="switcheryColor4"
                                                            value="1"
                                                            class="switch"
                                                            checked
                                                            />
                                                            <% if (validationError) { %>
                                                                <% if (validationError.active) { %>
                                                                    <span class="text-danger"><%=validationError.active[0].msg %></span>
                                                                <% } %>
                                                            <% } %>
                                                        <label for="switcheryColor4"
                                                            class="card-title ml-1">الحالة </label>
                                                    </div>
                                                </div>

                                                </div>
                                            </div>


                                            <button type="button" class="btn btn-warning mr-1"
                                                    onclick="history.back();">
                                                <i class="ft-x"></i> تراجع
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="la la-check-square-o"></i> حفظ
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- // Basic form layout section end -->
            </div>
        </div>
    </div>

    <%- include("../layouts/footer") %> 
    <%- include("../layouts/footer-scripts") %> 
</body>
</html>
